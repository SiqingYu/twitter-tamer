{
    "manifest_version": 2,
    "author": "Grant Winney",
    "homepage_url": "https://github.com/grantwinney/chrome-extension-block-comments",

    "name": "Distraction Free Twitter",
    "description": "Hide parts of the Twitter experience that you'd rather ignore.",
    "version": "1.0.0",

    "update_url": "http://clients2.google.com/service/update2/crx",

    "options_page": "options.html",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_title": "Distraction Free Twitter",
        "default_icon": {
            "16": "images/dft-16.png",
            "32": "images/dft-32.png",
            "48": "images/dft-48.png",
            "64": "images/dft-64.png",
            "128": "images/dft-128.png"
        }
    },

    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "css": [
                "css/twitter.css"
            ],
            "js": [
                "js/arrive.js",
                "js/twitter.js"
            ],
            "run_at": "document_start"
        }
    ]
}
